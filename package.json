{
  "name": "angularflow",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "cross-env NODE_ENV=development turbo watch dev --filter=!docs",
    "docs:dev": "cross-env NODE_ENV=development turbo watch docs:dev",
    "lint:check": "turbo run lint:check",
    "lint:fix": "turbo run lint:fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "check-types": "turbo run check-types --parallel",
    "test": "turbo run test --parallel",
    "test:coverage": "turbo run test --parallel -- --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.8.1",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "stylus": "0.0.1-security"
    }
  }
}
